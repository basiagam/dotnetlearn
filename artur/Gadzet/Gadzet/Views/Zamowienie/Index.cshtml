@model IEnumerable<Gadzet.Models.Sklep.Zamowienie>
@{
    ViewBag.Title = "Zamówienia";
} 
<div class="container">
<div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <table class="table table-striped">
        <tr>
            <th>
                Zamawiający
            </th>
            <th>
                Adres
            </th>
            <th>
                Telefon
            </th>
            <th>
                E-mail
            </th>
            <th>
                Data zamówienia
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Imie)
                    @Html.DisplayFor(modelItem => item.Nazwisko)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataZamowienia)
                </td>
                <td>
                    @Html.ActionLink("Szczegóły", "Szczegoly", new
                {
                    id =
                item.IdZamowienie
                })
                </td>
            </tr>
        }
    </table>
</div>
</div>