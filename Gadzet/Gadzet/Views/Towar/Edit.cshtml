@model Gadzet.Models.Sklep.Towar
@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8 obramowanieTowaru" style="margintop: 20px; margin-bottom: 20px;">
            <div style="padding-top: 20px;">
                <span>Zdjęcia</span>
                <span style="float: right;">
                    <a href="@Url.Action("DodajZdjecia", new { id = Model.IdTowar })"
                       class="gadzetBtn" style="max-width: 150px;">Dodaj zdjęcia</a>
                </span>
            </div>
            <hr />
            <div>
                @foreach (var i in Model.TowarZdjecia)
                {
                    <div class="col-sm-2" style="margin-bottom: 25px;">
                        <center>
                            <img src="@i.Url" class="zdjecieObramowanie"
                                 style="width: 100px; height: 100px;" />
                        </center>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8 obramowanieTowaru" style="margintop: 20px; margin-bottom: 20px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h4>Towar</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "textdanger" })
                    @Html.HiddenFor(model => model.IdTowar)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nazwa, htmlAttributes:
                            new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Nazwa, new
                       {
                           htmlAttributes = new { @class = "form-control" }
                       })
                            @Html.ValidationMessageFor(model => model.Nazwa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Opis, htmlAttributes: new
                   {
                       @class = "control-label col-md-4"
                   })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Opis, new
                       {
                           htmlAttributes = new { @class = "form-control" }
                       })
                            @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Cena, htmlAttributes: new
                   {
                       @class = "control-label col-md-4"
                   })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Cena, new
                       {
                           htmlAttributes = new { @class = "form-control" }
                       })
                            @Html.ValidationMessageFor(model => model.Cena, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.VIPTowar, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.VIPTowar)
                                @Html.ValidationMessageFor(model => model.VIPTowar, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TowarPromocyjny, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.TowarPromocyjny)
                                @Html.ValidationMessageFor(model => model.TowarPromocyjny, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="Zapisz"
                                   class="gadzetBtn btn-default" style="width: 150px;" />
                        </div>
                    </div>
                </div>
            } 
            <div>
            @Html.ActionLink("Wróć do listy", "Index", null, new
            {
                @class ="gadzetBtn btn-block",
                @style = "width: 150px;"
            })
        </div>
    </div>
</div>
</div>
