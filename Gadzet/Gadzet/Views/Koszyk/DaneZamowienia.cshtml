@model Gadzet.Models.Sklep.Zamowienie
@{
    ViewBag.Title = "Dane zamówienia";
} 
@using (Html.BeginForm("DaneZamowienia", "Koszyk", FormMethod.Post, new {
@class = "form-horizontal", role = "form" }))
{
@Html.AntiForgeryToken()
<div class="container">
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8 obramowanieTowaru"
             style="margin-top: 20px; margin-bottom: 20px;">
            <h4>Uzupełnij dane zamówienia</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Imie, new { @class = "col-md-4 control - label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Imie, new { @class = "formcontrol" })
                    @Html.ValidationMessageFor(m => m.Imie, null, new { @class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Nazwisko, new { @class = "col-md-4 control - label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Nazwisko, new { @class = "formcontrol" })
                    @Html.ValidationMessageFor(m => m.Nazwisko, null, new { @class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control - label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "formcontrol" })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Telefon, new { @class = "col-md-4 control - label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Telefon, new { @class = "formcontrol" })
                    @Html.ValidationMessageFor(m => m.Telefon, null, new { @class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Adres, new { @class = "col-md-4 control - label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Adres, new { @class = "formcontrol" })
                    @Html.ValidationMessageFor(m => m.Adres, null, new { @class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="gadzetBtn btn-default"
                           value="Zapisz" />
                </div>
            </div>
        </div>
    </div>
</div>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
