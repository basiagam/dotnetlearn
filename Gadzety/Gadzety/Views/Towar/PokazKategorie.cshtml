@model PagedList.IPagedList<Gadzety.Models.ViewModels.TowarViewModel>
@using PagedList.Mvc;
<div class="col m3 l2">
    <!-- kategorie-->
    @Html.Action("_Kategorie", "Home")
    <!--boczki-->
    <div id="blok">Miejsce na banner FB</div>
    <div id="blok">
        <h4>Newsletter</h4>
        <p>Zyskujesz super możliwości zapisując się do naszego newslettera</p>
    </div>
    <div id="blok">Nowości</div>
    <div id="blok">Miejsce na banner PayU</div>
</div>
<div class="col m9 l10">
    <h3>@ViewBag.NazwaKategorii</h3>
    @foreach (var t in Model)
    {
        <div class="col s12 col m6 l4 obramowanieTowaru" style="margin-top: 25px; padding:5px; ">
            <center>
                <div style="height:40px; text-align:center; margin-top:10px;">
                    <h4>@t.Nazwa</h4>
                </div>
                <img style="height:180px; width:150px;" src="@t.Zdjecia.FirstOrDefault()" />
            </center>
            <div style="font-size: 12px; margin:15px 0px 0px 5px;">
                @t.Cena PLN
            </div>
            <div style="font-size:12px; float:right; margin-right:5px;">
                <a class="btn indigo darken-3" href="@Url.Action("Szczegoly","Towar", new{ id = t.IdTowar})">Szczegóły</a>
            </div>
        </div>
    }
</div>
<div class="row" style="margin-top:20px">
    <div class="col s12">
        <center>
            <div>
                @Html.PagedListPager(Model,page=> Url.Action("PokazKategorie",new { page = page }))
            </div>
        </center>
    </div>
</div>
