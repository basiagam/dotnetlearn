@model IEnumerable<Gadzety.Models.Towar>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TowarPromocyjny)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TowarPolecany)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TowarPromocyjny)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TowarPolecany)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IdTowar }, new { @class = "btn indigo darken-4" }) 
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IdTowar }, new { @class = "btn orange" }) 
            @Html.ActionLink("Usuń", "Delete", new { id=item.IdTowar }, new { @class = "btn red darken-4" })
        </td>
    </tr>
}

</table>
