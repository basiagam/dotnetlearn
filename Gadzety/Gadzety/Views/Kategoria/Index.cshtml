@model IEnumerable<Gadzety.Models.Kategoria>

@{
    ViewBag.Title = "Kategorie";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodaj", "Create",null, new { @class = "btn indigo darken-3" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IdKategoria }, new { @class = "btn indigo darken-4" }) 
            @Html.ActionLink("Szczegóły", "Details", new { id = item.IdKategoria }, new { @class = "btn orange" }) 
            @Html.ActionLink("Usuń", "Delete", new { id=item.IdKategoria }, new { @class = "btn red darken-4" })
        </td>
    </tr>
}

</table>
