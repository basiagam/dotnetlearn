<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/Content/materialize.css" media="screen,projection" />
    <script type="text/javascript" src="~/Scripts/jquery-3.1.1.js"></script>
    <script type="text/javascript" src="~/Scripts/materialize.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Tytul - Gadżety</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <nav>
        <div class="nav-wrapper indigo darken-3">
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
            <div id="logowanie">
                <ul id="nav-mobile" class="left hide-on-med-and-down">
                    <li>@Html.ActionLink("Logowanie", "Login", "Account")</li>
                    <li>@Html.ActionLink("Rejestracja", "Register", "Account")</li>
                </ul>         
            </div>
            <div id="szukajka">
                <div class="right hide-on-med-and-down">
                    Szukajka
                </div>
            </div>
            <ul id="mobile-demo" class="side-nav">
                <li>@Html.ActionLink("Logowanie", "Login", "Account")</li>
                <li>@Html.ActionLink("Rejestracja", "Register", "Account")</li>
                <li>Szukajka</li>
            </ul>  
        </div>
    </nav>
    <div class="container">
        <!--3 glowne gridy-->
        <div class="row">
            <div class="col m4 s12">
                <h2>Logo</h2>
                <p>logo naszego sklepu</p>
            </div>
            <div class="col m4 s12">
                <h2>XXX XXX XXX</h2>
                <p>Masz pytania? Zadzwoń</p>
            </div>
            <div class="col m4 s12"><h2>Koszyk</h2></div>
        </div>
        <div class="row">
            @RenderBody()
        </div>
    </div>
    <footer class="page-footer indigo darken-3">
        <div class="container">
            <div class="row">
                <div class="col m4 s4">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 3</a></li>
                    </ul>
                </div>
                <div class="col m4 s4">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 3</a></li>
                    </ul>
                </div>
                <div class="col m4 s4">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 3</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © @DateTime.Now.Year
            </div>
        </div>
    </footer>


    
    
    @RenderSection("scripts", required: false)
    
</body>
</html>
@section Scripts{
    <script>
        $(document).ready(function ()
        {
            $(".button-collapse").sideNav();
        });
    </script>
    }
